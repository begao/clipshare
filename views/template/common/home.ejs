

  <div id="featured" class="container-fluid">
    <% _.each(featuredPost, function(featured) { %>
    <a href="/post/view?id=<%= featured.id %>">
    <div class="col-md-2 col-xs-3 col-sm-3 featured-cat">
        <img class="thumb-post" src="<%= featured.thumbnail %>">
        <!--Thumbnail 270x400-->
        <div class="name-post">
          <%= featured.name %>
         </div>
      </div>
    </a>
    <% }) %>
  </div>


<div id="list-post" class="container col-sm-8">
    <div class="panel panel-default">
      <div class="panel-heading">PHIM MỚI CẬP NHẬT</div>
      <div class="panel-body">
        <% _.each(allPost, function(post) { %>
        <a href="/post/view?id=<%= post.id %>">
          <div class="col-md-3 col-xs-3 col-sm-3 new-post">
            <img class="thumb-post" src="<%= post.thumbnail %>">
            <!--Thumbnail 270x400-->
            <div class="name-post">
              <%= post.name %>
              <span class="desc-post"><%= post.description %></span>
            </div>
          </div>
        </a>
        <% }) %>
      </div>
      <div class="panel-footer text-center">
        <ul class="pagination">
          <li><a href="#">1</a></li>
          <li class="active"><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
        </ul>
      </div>
    </div>
</div>

  <div id="column-right" class="row container col-sm-4">
    <div class="panel panel-default">
      <div class="panel-heading">column-right</div>
      <div class="panel-body">body</div>
    </div>
  </div>


