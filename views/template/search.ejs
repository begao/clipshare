<div class="category-page">
  <%- partial ('common/navbar.ejs') %>
  <div class="container">
    <div id="list-post" class="col-sm-8">
      <div class="panel panel-default">
        <div class="panel-heading"><i class="fa fa-film"></i> SEARCH RESULT</div>
        <div class="panel-body">
          <% _.each(searchPost, function(post) { %>
          <a href="/post/view?id=<%= post.id %>">
            <div class="col-md-3 col-xs-3 col-sm-3 new-post">
              <img class="thumb-post" src="<%= post.thumbnail %>">
              <!--Thumbnail 270x400-->
              <div class="name-post">
                <%= post.name %>
                <span class="desc-post"><%= post.description %></span>
              </div>
            </div>
          </a>
          <% }) %>
        </div>
        <div class="panel-footer text-center">
          <ul class="pagination">
            <li><a href="/category/view?id=">1</a></li>
            <li class="active"><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div id="column-right" class="col-sm-4">
      <div class="panel panel-default">

        <div class="panel-heading"><i class="fa fa-film"></i> 5 LATEST MOVIES</div>
        <div class="panel-body">
          <% _.each(fivePost, function(latestpost) { %>
          <a href="/post/view?id=<%= latestpost.id %>">
            <div class="media featured-name">
              <div class="media-left">
                <img src="<%= latestpost.thumbnail %>" class="media-object" style="width:80px">
              </div>
              <div class="media-body">
                <h5 class="media-heading"><%= latestpost.name %></h5>
                <p><%= latestpost.description %></p>
                <p><i class="fa fa-clock-o"></i> <%= latestpost.time %></p>
                <p><i class="fa fa-calendar"></i> <%= latestpost.year %></p>
                <p><i class="fa fa-eye"></i> <%= latestpost.view %> views</p>
              </div>
            </div></a><hr>
          <% }) %>
        </div>
      </div>
    </div>

  </div>
</div>
