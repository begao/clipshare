<div class="category-page">
  <%- partial ('common/navbar.ejs') %>
  <div class="container">
    <div id="list-post" class="col-sm-8">
      <div class="panel panel-default">
        <div class="panel-heading"><i class="fa fa-film"></i> <%= foundCategory.name %></div>
        <div class="panel-body">
          <% _.each(foundCategory.posts, function(post) { %>
          <a href="/post/view?id=<%= post.id %>&slug=<%= post.slug %>">
            <div class="col-md-3 col-xs-3 col-sm-3 new-post">
              <img width="300" height="444" class="thumb-post" src="<%= post.thumbnail %>">
              <!--Thumbnail 270x400-->
              <div class="name-post">
                <%= post.name %>
                <span class="desc-post"><%= post.description %></span>
              </div>
            </div>
          </a>
          <% }) %>
        </div>
        <div class="phantrang-cat panel-footer text-center">

          <span class="sr-only countPost"><%=foundCategory.posts.length %></span>
          <ul class="pagination"></ul>
        </div>
      </div>
    </div>

    <%- partial ('common/column-right.ejs') %>

  </div>
</div>
